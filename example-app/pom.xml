<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.4.3</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>com.bbende.k8s</groupId>
    <artifactId>example-app</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Example App</name>

    <modules>
      <module>example-frontend</module>     
      <module>example-backend</module>
      <module>example-api</module>
    </modules>

    <properties>
        <java.version>11</java.version>
        <!-- Properties for spring-boot:build-image execution defaulting to docker hub -->
        <image.skip>true</image.skip>
        <image.publish>false</image.publish>
        <image.prefix>docker.io</image.prefix>
        <image.name>${image.prefix}/bbende/${project.artifactId}</image.name>
        <image.tag>${project.version}</image.tag>
        <image.publish.registry.url>https://index.docker.io/v1/</image.publish.registry.url>
        <image.publish.registry.username>bbende</image.publish.registry.username>
        <!--suppress UnresolvedMavenProperty -->
        <image.publish.registry.password>${env.DOCKERHUB_TOKEN}</image.publish.registry.password>
        <image.publish.registry.token></image.publish.registry.token>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <!-- Attaches spring-boot:build-image to the package phase with skip=true by default,
                     use -Pimage-build or -Pimage-publish to activate the execution -->
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>build-image</id>
                            <phase>package</phase>
                            <goals>
                                <goal>build-image</goal>
                            </goals>
                            <configuration>
                                <skip>${image.skip}</skip>
                                <image>
                                    <name>${image.name}:${image.tag}</name>
                                    <publish>${image.publish}</publish>
                                    <env>
                                        <SPRING_OUTPUT_ANSI_ENABLED>ALWAYS</SPRING_OUTPUT_ANSI_ENABLED>
                                    </env>
                                </image>
                                <docker>
                                    <publishRegistry>
                                        <url>${image.publish.registry.url}</url>
                                        <username>${image.publish.registry.username}</username>
                                        <password>${image.publish.registry.password}</password>
                                        <token>${image.publish.registry.token}</token>
                                    </publishRegistry>
                                </docker>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <!-- Build images, but don't publish -->
        <profile>
            <id>build-image</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <image.skip>false</image.skip>
            </properties>
        </profile>
        <!-- Build images and publish -->
        <profile>
            <id>publish-image</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <image.skip>false</image.skip>
                <image.publish>true</image.publish>
            </properties>
        </profile>
        <!-- Use GitHub Container Registry -->
        <profile>
            <id>github-packages</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <image.prefix>ghcr.io</image.prefix>
                <image.publish.registry.url>https://ghcr.io</image.publish.registry.url>
                <image.publish.registry.username>bbende</image.publish.registry.username>
                <!--suppress UnresolvedMavenProperty -->
                <image.publish.registry.password>${env.GITHUB_PACKAGES_TOKEN}</image.publish.registry.password>
            </properties>
        </profile>
    </profiles>

</project>
